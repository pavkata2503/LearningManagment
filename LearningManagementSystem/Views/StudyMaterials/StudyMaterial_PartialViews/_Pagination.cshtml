<nav aria-label="Page navigation">
    <ul class="pagination mb-0">

        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-pageNumber="1"
               asp-route-pageSize="@ViewBag.PageSize">Първа</a>
        </li>

        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-pageNumber="@(ViewBag.CurrentPage - 1)"
               asp-route-pageSize="@ViewBag.PageSize">Предишна</a>
        </li>

        <li class="page-item">
            <a class="page-link">Страница @ViewBag.CurrentPage от @ViewBag.TotalPages</a>
        </li>

        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-pageNumber="@(ViewBag.CurrentPage + 1)"
               asp-route-pageSize="@ViewBag.PageSize">Следваща</a>
        </li>

        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-pageNumber="@ViewBag.TotalPages"
               asp-route-pageSize="@ViewBag.PageSize">Последна</a>
        </li>

    </ul>
</nav>
